# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym h resize shrink width 10 px or 10 ppt
        bindsym j resize grow height 10 px or 10 ppt
        bindsym k resize shrink height 10 px or 10 ppt
        bindsym l resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape or $mod+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}

bindsym $mod+r mode "resize"

# Increase and decrease volume with Page Down and Page Up
bindsym $mod+Next  exec amixer -q set Master 5%- && $refresh_volume
bindsym $mod+Prior exec amixer -q set Master 5%+ && $refresh_volume

# Increase and decrease brightness with Home and End
bindsym $mod+Home exec xbacklight -inc 10 || ~/.config/i3/myScripts/brightnessControl.sh -inc
bindsym $mod+End  exec xbacklight -dec 10 || ~/.config/i3/myScripts/brightnessControl.sh -dec

# Lock screen
set $lock_screen (scrot - | convert - -blur 0x4 - | composite -gravity southeast ~/.config/i3/images/i3lock-overlay.png - /tmp/lock.png) && i3lock -i /tmp/lock.png
set $shutdown_music ffplay ~/.config/i3/sounds/logout.ogg -autoexit -nodisp -loglevel quiet

mode "exit: [l]ogout, [r]eboot, [s]hutdown, [S]uspend, [L]ock, [t]urn off screen" {
  bindsym l exec $shutdown_music && i3-msg exit
  bindsym r exec $shutdown_music && systemctl reboot
  bindsym s exec $shutdown_music && systemctl poweroff
  # Add delay, because systemctl suspend finishes before the pc suspends (asynchronous)
  bindsym Shift+s exec i3-msg mode "default" && $lock_screen && systemctl suspend
  bindsym Shift+l exec i3-msg mode "default" && $lock_screen
  # Watch out: ffplay prevents the monitor from entering sleep mode
  bindsym --release t exec i3-msg mode "default" && xset dpms force off

  bindsym Escape mode "default"
  bindsym Return mode "default"
  bindsym $mod+Shift+e mode "default"
}
bindsym $mod+Shift+e mode "exit: [l]ogout, [r]eboot, [s]hutdown, [S]uspend, [L]ock, [t]urn off screen"

